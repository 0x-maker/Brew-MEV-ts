{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "dist",
    "sourceMap": true,
    "lib": ["es2018"],
    "types": ["node"],
    "skipLibCheck": true
  },
  "include": ["src/**/*", "utils/**/*", "types/**/*"],
  "exclude": ["node_modules", "dist"]
} 